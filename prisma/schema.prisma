generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PAYMENT {
  CASH
  CARD
  CHECK
  TRANSFER
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  imageUrl String?

  expenses Expense[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id           String  @id @default(cuid())
  name         String
  title        String
  amount       Float
  description  String?
  advance      Float?
  workProgress Float?
  paid         Float?

  milestonePayment MilestonePayment[]

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MilestonePayment {
  id          String   @id @default(cuid())
  name        String
  title       String
  amount      Float
  description String?
  paymentType PAYMENT

  expense   Expense? @relation(fields: [expenseId], references: [id])
  expenseId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
